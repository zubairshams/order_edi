<div class="jumbotron">
  <% if user_signed_in? %>
    <h1>Welcome to home page, trusted user!</h1>
    <p class="lead">
      You can place new order from here.
    </p>
    <%= link_to "New Order", new_order_path, :class => 'btn btn-primary' %>
  <% else %>
    <h1>Welcome, new user!</h1>
    <p class="lead">
      You must sign in or sign up before you can access the app features.
    </p>
    <div class="row-fluid">
      <div class="span6">
        <%= link_to "Sign In", new_user_session_path, :class => "btn btn-success" %>
      </div>
      <div class="span6">
        <%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
